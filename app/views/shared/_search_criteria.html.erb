<br>
<div class='drops'>
  <div class='drop'>
    <label>Year</label>
    <select id="year_filter" style="width: 80px;" class="multiselect" multiple="multiple">
      <option value="2011">2011</option>
      <option value="2012">2012</option>
      <option value="2013">2013</option>
      <option value="2014">2014</option>
    </select>
  </div>
  <div class='drop'>
    <label>Organizations</label>
    <div>
      <% @drop_down_id = "org_filter" %>
      <% @drop_down_data = @organizations %>
      <% @drop_down_data_index = "login" %>
      <% @drop_down_empty_label = "All" %>
      <% @drop_down_selected = nil %>
      <% @drop_down_width = "140px" %>
      <%= render 'shared/drop_down' %>
    </div>
  </div>
  <div class='drop'>
    <label>Repository</label>
    <div>
      <% @drop_down_id = "repo_filter" %>
      <% @drop_down_data = @repos %>
      <% @drop_down_data_index = "name" %>
      <% @drop_down_empty_label = "All" %>
      <% @drop_down_selected = nil %>
      <% @drop_down_width = "140px" %>
      <%= render 'shared/drop_down' %>
    </div>
  </div>
  <div class='drop'>
    <label>Company</label>
    <div>
      <% @drop_down_id = "company_filter" %>
      <% @drop_down_data = @companies %>
      <% @drop_down_data_index = "name" %>
      <% @drop_down_empty_label = "All" %>
      <% @drop_down_selected = nil %>
      <% @drop_down_width = "140px" %>
      <%= render 'shared/drop_down' %>
    </div>
  </div>

  <div class='drop'>
    <label>Engineer</label>
    <div>
      <% @drop_down_id = "user_name_filter" %>
      <% @drop_down_data = @user_names %>
      <% @drop_down_data_index = "name" %>
      <% @drop_down_empty_label = "All" %>
      <% @drop_down_selected = nil %>
      <% @drop_down_width = "140px" %>
      <%= render 'shared/drop_down' %>
    </div>
  </div>

  <div class='drop'>
    <label >Metric</label>
    <select id="metric_filter" style='width:140px;' >
      <option value="prs">Pull Requests</option>
      <option value="avg_days_open">Average Days Opened</option>
      <option value="percent_merged">Percent Merged</option>
      <option value="commits">Commits</option>
    </select>
  </div>
</div>

<div id='secch_section' style='display:none;padding-top:20px;'>
  <div style='display:inline-block;'> 
    <div style='border-top: 1px dotted #f00;color: #fff;background-color: #ffff;height: 1px;width:100%;'></div>
    <div id='hidden_widget_container1' class="" style='display:block;margin-bottom: 0; padding-bottom: 0; font-weight:normal;'>
      <div class='drop'>
        <h2>Grop By</h2>
        <select id="group_by_filter">
          <option value="month">Month</option>
          <option value="quarter">Quarter</option>
          <option value="year">Year</option>
          <option value="repo">Repository</option>
          <option value="state">State</option>
          <option value="company" selected>Company</option>
          <option value="user_login">User Login</option>
          <option value="user_name">User Name</option>
        </select>
        <br><br><br><br>
      </div>
    </div>
    <p></p>
    <br>
    <br>
    <br>
    <div id='hidden_widget_container2' class="" style='margin-bottom: 0; padding-bottom: 0; font-weight:normal;'>
      <h2>Search Criteria:</h2>
      <div >
        <button id="clear_search_criteria_button" style='width:140px;height:24px;'>Clear Search Criteria</button>
        <p>
      </div>
    </div>
    
    <div id='hidden_widget_container3' style='margin-bottom: 0; padding-bottom: 0; font-weight:normal;'>
      <div class='drop'>
        <label>Month</label>
        <select id="month_filter"  multiple="multiple">
          <option value="1">January</option>
          <option value="2">February</option>
          <option value="3">March</option>
          <option value="4">April</option>
          <option value="5">May</option>
          <option value="6">June</option>
          <option value="7">July</option>
          <option value="8">August</option>
          <option value="9">September</option>
          <option value="10">October</option>
          <option value="11">November</option>
          <option value="12">December</option>
        </select>
      </div>
      <div class='drop'>
        <label>State</label>
        <select id="state_filter" style='width:140px;' class="multiselect" multiple="multiple">
          <option value="open">Open</option>
          <option value="merged">Merged</option>
          <option value="closed">Closed (Not Merged)</option>
        </select>
      </div>
      <div class='drop'>
        <label>Quarter</label>
        <select id="quarter_filter" style="width: 100px;" class="multiselect" multiple="multiple">
          <option value="q1">Q1</option>
          <option value="q2">Q2</option>
          <option value="q3">Q3</option>
          <option value="q4">Q4</option>
        </select>
      </div>
      <div class='drop'>
        <label>Start Date</label>
        <div style='width:150px;'>
          <input type="text" id="start_date_filter" size="20">
          &nbsp;&nbsp;&nbsp;
        </div>
      </div>
      <div class='drop'>
        <label>End Date</label>
        <div style='width:150px;'>
          <input type="text" id="end_date_filter" size="20">
          &nbsp;&nbsp;&nbsp;
        </div>
      </div>
      <div class='drop'>
        <label>User Login</label>
        <div>
          <% @drop_down_id = "user_login_filter" %>
          <% @drop_down_data = @user_logins %>
          <% @drop_down_data_index = "login" %>
          <% @drop_down_empty_label = "All" %>
          <% @drop_down_selected = nil %>
          <% @drop_down_width = "140px" %>
          <%= render 'shared/drop_down' %>
        </div>
      </div>
      <br><br><br>
    </div>
    
    <div id='hidden_widget_container4' class="" style='display:block;margin-bottom: 0px; padding-bottom: 0px; font-weight:normal;'>
      <div style='border-bottom: 1px dotted #f00;color: #fff;background-color: #ffff;height: 1px;width:100%;padding-top: 20px;'></div>
      <div >
        <br>
      </div>
    </div>
  </div>
</div>  <!-- end of seach setion -->

<script type="text/javascript">
  $(document).ready(function() {
    initializeSearchCriteria(<%=@filter_changed_function%>);
    // TODO: Clear all the dropdowns
  });
</script>
