<h1>Log in</h1>
<p id="notice"><%= notice %></p>

<% if @error %>
<p style="color: red"><%= @error %></p>
<% end %>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>