function toDash(input) {
  return input.replace(/([A-Z])/g, function($1){return "-"+$1.toLowerCase();});
}

function toUnderscore(input) {
  return input.replace(/([A-Z])/g, function($1){return "_"+$1.toLowerCase();});
}

