CHART_COLORS = <%= Constants::CHART_COLORS.to_json %>;

TABLE_OPTIONS = {
    "sScrollY": "350px",
    //"sScrollX": "800px",
    "bPaginate": false,
    "bAutoWidth" : true,
    "bFilter": true,
    "aaSorting": [[ 1, "desc" ]]
  };

//
// Data Table Functions
//
function makeAsDataTableOnLoad(tableHandleIdStr) {
  $(document).ready( function () {
    makeAsDataTable(tableHandleIdStr)
  } );
}

function makeAsDataTable(tableHandleIdStr) {
  $(tableHandleIdStr).dataTable(TABLE_OPTIONS);
}

